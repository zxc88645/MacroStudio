<UserControl x:Class="MacroStudio.Presentation.Views.CommandGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:MacroStudio.Presentation.Converters"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <UserControl.Resources>
        <conv:CommandDisplayConverter x:Key="CommandDisplayConverter" />
    </UserControl.Resources>
    <Border Style="{DynamicResource CardBorder}" Padding="14">
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8" IsEnabled="{Binding CommandGrid.IsEditorEnabled}">
                <TextBlock FontWeight="SemiBold" Text="{DynamicResource Ui.Editor.Title}" />
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Margin="0,0,10,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Text="{Binding CommandGrid.EditorStatusText}" />
                    <Button Content="{DynamicResource Ui.Editor.AddSleep}" Margin="0,0,8,0" Command="{Binding CommandGrid.AddSleepCommandCommand}"/>
                    <Button Content="{DynamicResource Ui.Editor.AddMove}" Margin="0,0,8,0" Command="{Binding CommandGrid.AddMouseMoveCommand}"/>
                    <Button x:Name="AddMouseButton"
                            Content="{DynamicResource Ui.Editor.AddMouse}"
                            Margin="0,0,8,0">
                        <Button.Resources>
                            <Style TargetType="{x:Type ContextMenu}">
                                <Setter Property="Background" Value="{StaticResource Surface}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
                            </Style>
                            <Style TargetType="{x:Type MenuItem}">
                                <Setter Property="Background" Value="{StaticResource Surface}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter Property="Padding" Value="10,4"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" Value="{StaticResource Bg1}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{DynamicResource Ui.Editor.Mouse.LeftClick}" Command="{Binding CommandGrid.AddLeftClickCommand}" />
                                <MenuItem Header="{DynamicResource Ui.Editor.Mouse.RightClick}" Command="{Binding CommandGrid.AddRightClickCommand}" />
                                <MenuItem Header="{DynamicResource Ui.Editor.Mouse.MiddleClick}" Command="{Binding CommandGrid.AddMiddleClickCommand}" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button Content="{DynamicResource Ui.Editor.AddText}" Margin="0,0,8,0" Command="{Binding CommandGrid.AddKeyboardTextCommand}"/>
                </StackPanel>
            </DockPanel>

            <Grid>
                <avalon:TextEditor x:Name="ScriptEditor"
                                  Document="{Binding CommandGrid.Document}"
                                  IsEnabled="{Binding CommandGrid.IsEditorEnabled}"
                                  SyntaxHighlighting="{Binding CommandGrid.SyntaxHighlighting}"
                                  FontFamily="Consolas"
                                  FontSize="13"
                                  ShowLineNumbers="True"
                                  LineNumbersForeground="{DynamicResource TextMutedBrush}"
                                  Background="{DynamicResource Bg1}"
                                  Foreground="{DynamicResource TextBrush}"
                                  BorderBrush="{DynamicResource BorderBrushSoft}"
                                  BorderThickness="1"
                                  Padding="8"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  WordWrap="False" />

                <!-- Empty-state hint when no script is selected -->
                <Border BorderBrush="{DynamicResource BorderBrushSoft}"
                        BorderThickness="1"
                        Background="{DynamicResource Bg1}"
                        IsHitTestVisible="False">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CommandGrid.IsEditorEnabled}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBlock Text="{DynamicResource Ui.Editor.SelectScriptHint}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="24"
                               MaxWidth="520"/>
                </Border>
            </Grid>
        </DockPanel>
    </Border>
</UserControl>

