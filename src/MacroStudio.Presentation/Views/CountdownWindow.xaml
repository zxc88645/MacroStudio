<Window x:Class="MacroStudio.Presentation.Views.CountdownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Background="#111827"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    <Border Padding="26" CornerRadius="14" Background="#0f172a" BorderBrush="#263244" BorderThickness="1">
        <StackPanel>
            <TextBlock Foreground="#e5e7eb" FontSize="16" FontWeight="SemiBold" Text="Focus Warning" Margin="0,0,0,6"/>
            <TextBlock Foreground="#9ca3af" Text="Automation will start in:" Margin="0,0,0,14"/>
            <TextBlock x:Name="CountdownText" Foreground="#e5e7eb" FontSize="44" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Foreground="#9ca3af" Margin="0,14,0,0" Text="Press Ctrl+Shift+Esc anytime to terminate."/>
        </StackPanel>
    </Border>
</Window>

