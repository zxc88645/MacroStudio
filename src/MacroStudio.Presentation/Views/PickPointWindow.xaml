<Window x:Class="MacroStudio.Presentation.Views.PickPointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource Bg0}"
        Title="Pick Position"
        KeyDown="Window_KeyDown">
    <Border Style="{DynamicResource CardBorder}" Padding="16" Margin="14">
        <StackPanel>
            <TextBlock FontSize="16" FontWeight="SemiBold" Text="Pick Mouse Position" />
            <TextBlock Foreground="{DynamicResource TextMutedBrush}" Margin="0,6,0,0"
                       Text="請把滑鼠移到目標位置，然後按 F2 以擷取目前座標。" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Cancel" Width="90" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button Content="OK" Width="90" IsDefault="True" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

