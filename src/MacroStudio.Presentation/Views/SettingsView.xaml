<UserControl x:Class="MacroStudio.Presentation.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:val="clr-namespace:MacroStudio.Domain.ValueObjects;assembly=MacroStudio.Domain"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Text="{DynamicResource Ui.Settings.Title}"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Padding="14">
            <DockPanel LastChildFill="True">
                <!-- UI language -->
                <Border DockPanel.Dock="Top" Background="{DynamicResource Bg1}" CornerRadius="10" Padding="12" Margin="0,0,0,14" BorderBrush="{DynamicResource BorderBrushSoft}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Ui.Settings.LanguageLabel}"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding SelectedUiLanguage}"
                                  ItemsSource="{Binding AvailableUiLanguages}"
                                  DisplayMemberPath="DisplayName"
                                  Foreground="{DynamicResource TextBrush}"
                                  Background="{DynamicResource Bg1}"
                                  BorderBrush="{DynamicResource BorderBrushSoft}"/>
                        <TextBlock Grid.Column="2" Margin="12,2,0,0" Foreground="{DynamicResource TextMutedBrush}" Text="{DynamicResource Ui.Settings.LanguageHint}" TextWrapping="Wrap"/>
                    </Grid>
                </Border>

                <!-- Global Input Mode -->
                <Border DockPanel.Dock="Top" Background="{DynamicResource Bg1}" CornerRadius="10" Padding="12" Margin="0,0,0,14" BorderBrush="{DynamicResource BorderBrushSoft}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="鍵鼠模式"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding GlobalInputMode}"
                                  ItemsSource="{Binding AvailableInputModes}"
                                  Foreground="{DynamicResource TextBrush}"
                                  Background="{DynamicResource Bg1}"
                                  BorderBrush="{DynamicResource BorderBrushSoft}">
                        </ComboBox>
                        <TextBlock Grid.Column="2" Margin="12,2,0,0" Foreground="{DynamicResource TextMutedBrush}" Text="選擇全域鍵鼠模式：高階（SetCursorPos）、低階（SendInput）、硬件（Arduino）" TextWrapping="Wrap"/>
                    </Grid>
                </Border>

                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <TextBlock FontWeight="SemiBold" Text="{DynamicResource Ui.Settings.RecordingHotkeys.Title}" Margin="0,0,0,8"/>
                    <TextBlock Foreground="{DynamicResource TextMutedBrush}" Text="{DynamicResource Ui.Settings.RecordingHotkeys.Description}" TextWrapping="Wrap"/>
                </StackPanel>

                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Start -->
                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Ui.Settings.RecordingHotkeys.Start}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Text="{Binding RecordingStartHotkeyDisplay}"/>
                    <Button Grid.Row="0" Grid.Column="2" Margin="10,0,0,0" Width="90"
                            Content="{DynamicResource Ui.Button.Change}"
                            Style="{DynamicResource PrimaryButton}"
                            Command="{Binding ChangeRecordingStartHotkeyCommand}"/>

                    <!-- Pause -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Center" Text="{DynamicResource Ui.Settings.RecordingHotkeys.Pause}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Text="{Binding RecordingPauseHotkeyDisplay}"/>
                    <Button Grid.Row="1" Grid.Column="2" Margin="10,10,0,0" Width="90"
                            Content="{DynamicResource Ui.Button.Change}"
                            Command="{Binding ChangeRecordingPauseHotkeyCommand}"/>

                    <!-- Stop -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Center" Text="{DynamicResource Ui.Settings.RecordingHotkeys.Stop}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Text="{Binding RecordingStopHotkeyDisplay}"/>
                    <Button Grid.Row="2" Grid.Column="2" Margin="10,10,0,0" Width="90"
                            Content="{DynamicResource Ui.Button.Change}"
                            Command="{Binding ChangeRecordingStopHotkeyCommand}"/>

                    <!-- Reset -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="{DynamicResource Ui.Button.ResetToDefault}"
                                Width="120"
                                Command="{Binding ResetRecordingHotkeysToDefaultCommand}"/>
                        <TextBlock Margin="12,6,0,0"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Text="{Binding LastMessage}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>

