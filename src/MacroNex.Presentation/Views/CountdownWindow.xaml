<Window x:Class="MacroNex.Presentation.Views.CountdownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Background="{DynamicResource Bg1}"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    <Border Padding="26" CornerRadius="14" Background="{DynamicResource Surface}" BorderBrush="{DynamicResource BorderBrushSoft}" BorderThickness="1">
        <StackPanel>
            <TextBlock Foreground="{DynamicResource TextBrush}" FontSize="16" FontWeight="SemiBold" Text="{DynamicResource Ui.Countdown.FocusWarningTitle}" Margin="0,0,0,6"/>
            <TextBlock Foreground="{DynamicResource TextMutedBrush}" Text="{DynamicResource Ui.Countdown.AutomationWillStartIn}" Margin="0,0,0,14"/>
            <TextBlock x:Name="CountdownText" Foreground="{DynamicResource TextBrush}" FontSize="44" FontWeight="Bold" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>

