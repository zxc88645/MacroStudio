<UserControl x:Class="MacroNex.Presentation.Views.DebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:MacroNex.Presentation.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <conv:ArduinoConnectionStateBrushConverter x:Key="ArduinoConnectionStateBrushConverter" />
    </UserControl.Resources>
    
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Text="偵錯"
                   Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Style="{DynamicResource CardBorder}" Padding="14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!-- Arduino Connection Status -->
                        <GroupBox Header="Arduino 連接狀態" Padding="10" Margin="0,0,0,14" BorderBrush="{DynamicResource BorderBrushSoft}" Foreground="{DynamicResource TextMutedBrush}">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock DockPanel.Dock="Left" Text="狀態：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Ellipse Width="12" Height="12" VerticalAlignment="Center"
                                             Fill="{Binding ArduinoConnectionState, Converter={StaticResource ArduinoConnectionStateBrushConverter}}" />
                                    <TextBlock Margin="8,0,0,0" VerticalAlignment="Center"
                                               Text="{Binding ArduinoConnectionState}" />
                                </DockPanel>
                                <TextBlock Foreground="{DynamicResource TextMutedBrush}" Margin="0,4,0,0">
                                    <Run Text="已連接端口：" />
                                    <Run Text="{Binding ConnectedPortName, TargetNullValue='未連接'}" FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <!-- Connection Controls -->
                        <GroupBox Header="連接控制" Padding="10" Margin="0,0,0,14" BorderBrush="{DynamicResource BorderBrushSoft}" Foreground="{DynamicResource TextMutedBrush}">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,10">
                                    <Button DockPanel.Dock="Right" 
                                            Content="自動連接" 
                                            Width="100"
                                            Margin="8,0,0,0"
                                            Style="{DynamicResource PrimaryButton}"
                                            Command="{Binding AutoConnectCommand}"
                                            />
                                    <Button DockPanel.Dock="Right" 
                                            Content="刷新串口" 
                                            Width="100"
                                            Margin="8,0,0,0"
                                            Command="{Binding RefreshPortsCommand}" />
                                    <TextBlock VerticalAlignment="Center" Text="可用串口：" />
                                </DockPanel>
                                
                                <ComboBox ItemsSource="{Binding AvailableSerialPorts}"
                                          SelectedItem="{Binding SelectedSerialPort}"
                                          Margin="0,0,0,10"
                                          Foreground="{DynamicResource TextBrush}"
                                          Background="{DynamicResource Bg1}"
                                          BorderBrush="{DynamicResource BorderBrushSoft}" />

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="連接" 
                                            Width="80"
                                            Margin="0,0,8,0"
                                            Command="{Binding ConnectCommand}" />
                                    <Button Content="斷開" 
                                            Width="80"
                                            Command="{Binding DisconnectCommand}" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Status Message -->
                        <Border Background="{DynamicResource Bg1}" CornerRadius="5" Padding="10" BorderBrush="{DynamicResource BorderBrushSoft}" BorderThickness="1">
                            <TextBlock Text="{Binding StatusMessage}" 
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <!-- Mouse Test -->
                        <GroupBox Header="滑鼠測試" Padding="10" Margin="0,0,0,14" BorderBrush="{DynamicResource BorderBrushSoft}" Foreground="{DynamicResource TextMutedBrush}">
                            <StackPanel>
                                <!-- Current Position -->
                                <DockPanel Margin="0,0,0,10">
                                    <Button DockPanel.Dock="Right" Content="獲取位置" Width="80" Command="{Binding GetCursorPositionCommand}"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="當前位置："/>
                                        <Run Text="{Binding CurrentCursorPosition}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </DockPanel>

                                <!-- Absolute Move -->
                                <TextBlock Text="絕對座標移動" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Width="60" Text="{Binding TestMoveX, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                                    <TextBlock Text="Y:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Width="60" Text="{Binding TestMoveY, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                                    <Button Content="移動" Width="60" Command="{Binding TestMouseMoveAbsoluteCommand}" Style="{DynamicResource PrimaryButton}"/>
                                </StackPanel>

                                <!-- Relative Move -->
                                <TextBlock Text="相對座標移動" FontWeight="SemiBold" Margin="0,8,0,6"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="ΔX:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Width="60" Text="{Binding TestRelativeX, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                                    <TextBlock Text="ΔY:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Width="60" Text="{Binding TestRelativeY, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                                    <Button Content="移動" Width="60" Command="{Binding TestMouseMoveRelativeCommand}" Style="{DynamicResource PrimaryButton}"/>
                                </StackPanel>

                                <!-- Click Test -->
                                <TextBlock Text="滑鼠點擊測試" FontWeight="SemiBold" Margin="0,8,0,6"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="左鍵點擊" Width="80" Margin="0,0,8,0" Command="{Binding TestMouseClickLeftCommand}"/>
                                    <Button Content="右鍵點擊" Width="80" Command="{Binding TestMouseClickRightCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Keyboard Test -->
                        <GroupBox Header="鍵盤測試" Padding="10" Margin="0,0,0,14" BorderBrush="{DynamicResource BorderBrushSoft}" Foreground="{DynamicResource TextMutedBrush}">
                            <StackPanel>
                                <!-- Single Key -->
                                <TextBlock Text="單鍵測試 (字母/數字)" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="按鍵:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Width="60" Text="{Binding TestKeyText, UpdateSourceTrigger=PropertyChanged}" MaxLength="1" Margin="0,0,10,0"/>
                                    <Button Content="按下" Width="60" Command="{Binding TestKeyPressCommand}" Style="{DynamicResource PrimaryButton}"/>
                                </StackPanel>

                                <!-- Type Text -->
                                <TextBlock Text="文字輸入測試" FontWeight="SemiBold" Margin="0,8,0,6"/>
                                <DockPanel Margin="0,0,0,8">
                                    <Button DockPanel.Dock="Right" Content="輸入" Width="60" Command="{Binding TestTypeTextCommand}" Style="{DynamicResource PrimaryButton}" Margin="10,0,0,0"/>
                                    <TextBox Text="{Binding TestTypeText, UpdateSourceTrigger=PropertyChanged}"/>
                                </DockPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
