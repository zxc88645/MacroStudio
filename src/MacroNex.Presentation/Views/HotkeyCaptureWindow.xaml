<Window x:Class="MacroNex.Presentation.Views.HotkeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource Bg0}"
        Title="{DynamicResource Ui.HotkeyCapture.WindowTitle}"
        Width="500"
        Height="300"
        KeyDown="Window_KeyDown"
        PreviewKeyDown="Window_PreviewKeyDown"
        Focusable="True">
    <Border Style="{DynamicResource CardBorder}" Padding="20" Margin="14">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                <TextBlock FontSize="18" FontWeight="SemiBold" Text="{DynamicResource Ui.HotkeyCapture.Title}" Margin="0,0,0,8"/>
                <TextBlock Foreground="{DynamicResource TextMutedBrush}" Text="{DynamicResource Ui.HotkeyCapture.Instruction}" TextWrapping="Wrap"/>
            </StackPanel>

            <Border DockPanel.Dock="Top" 
                    Background="{DynamicResource Bg1}" 
                    BorderBrush="{DynamicResource BorderBrushSoft}"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,0,16"
                    MinHeight="80">
                <TextBlock x:Name="HotkeyDisplayText"
                           FontSize="24"
                           FontWeight="Bold"
                           Text="{DynamicResource Ui.HotkeyCapture.Placeholder}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextBrush}"/>
            </Border>

            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                <TextBlock Text="{DynamicResource Ui.HotkeyCapture.TriggerModeLabel}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="OnceModeRadio" Content="{DynamicResource Ui.HotkeyCapture.TriggerMode.Once}" IsChecked="True" Margin="0,0,16,0" 
                                 Checked="TriggerModeRadio_Checked"/>
                    <RadioButton x:Name="RepeatModeRadio" Content="{DynamicResource Ui.HotkeyCapture.TriggerMode.RepeatWhileHeld}" 
                                 Checked="TriggerModeRadio_Checked"/>
                </StackPanel>
            </StackPanel>

            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                <CheckBox x:Name="SwallowKeystrokeCheck"
                          Content="{DynamicResource Ui.HotkeyCapture.SwallowKeystroke}"
                          IsChecked="True"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="{DynamicResource Ui.Button.Clear}" Width="90" Margin="0,0,10,0" Click="ClearButton_Click" />
                <Button Content="{DynamicResource Ui.Button.Cancel}" Width="90" Margin="0,0,10,0" Click="CancelButton_Click" />
                <Button Content="{DynamicResource Ui.Button.Confirm}" Width="90" Style="{DynamicResource PrimaryButton}" Click="ConfirmButton_Click" IsEnabled="{Binding IsHotkeyValid}" />
            </StackPanel>
        </DockPanel>
    </Border>
</Window>
