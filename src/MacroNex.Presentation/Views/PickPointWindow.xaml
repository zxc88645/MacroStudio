<Window x:Class="MacroNex.Presentation.Views.PickPointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource Bg0}"
        Title="{DynamicResource Ui.PickPoint.WindowTitle}"
        KeyDown="Window_KeyDown">
    <Border Style="{DynamicResource CardBorder}" Padding="16" Margin="14">
        <StackPanel>
            <TextBlock FontSize="16" FontWeight="SemiBold" Text="{DynamicResource Ui.PickPoint.Title}" />
            <TextBlock Foreground="{DynamicResource TextMutedBrush}" Margin="0,6,0,0"
                       Text="{DynamicResource Ui.PickPoint.Instruction}" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="{DynamicResource Ui.Dialog.Cancel}" Width="90" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button Content="{DynamicResource Ui.Dialog.Ok}" Width="90" IsDefault="True" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

