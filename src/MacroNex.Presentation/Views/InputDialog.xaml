<Window x:Class="MacroNex.Presentation.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource Bg0}"
        Title="{DynamicResource Ui.App.Title}">
    <Border Style="{DynamicResource CardBorder}" Padding="16" Margin="14">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding TitleText}" />
                <TextBlock Foreground="{DynamicResource TextMutedBrush}" Margin="0,4,0,0" Text="{Binding SubtitleText}" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="{Binding LabelText}" Margin="0,0,0,6"/>
                <TextBox MinWidth="360" Text="{Binding ValueText, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="{DynamicResource Ui.Dialog.Cancel}" Width="90" Margin="0,0,10,0" Command="{Binding CancelCommand}" />
                <Button Content="{DynamicResource Ui.Dialog.Ok}" Width="90" Style="{DynamicResource PrimaryButton}" Command="{Binding OkCommand}" />
            </StackPanel>
        </DockPanel>
    </Border>
</Window>

